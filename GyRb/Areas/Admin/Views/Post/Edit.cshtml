@model GyRb.ViewModels.CreatePostVM

@{
    ViewData["Title"] = "Edit Post";
}

<div class="container-fluid">
    <a class="btn btn-danger mb-1" asp-action="Index" asp-controller="Post">Regresar</a>
    <div class="card">
        <div class="card-header bg-danger">
            <h4 class="text-white">Editar Congreso</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" asp-controller="Post" asp-area="Admin" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ThumbnailUrl" />

                <div class="row mb-2">
                    <div class="col-9">
                        <div class="mb-2">
                            <label>Título</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label>Descripción Corta</label>
                            <input type="text" asp-for="ShortDescription" class="form-control" />
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label>Descripción</label>
                            @* <textarea id="richEditor" asp-for="Description" class="form-control" rows="8"></textarea> /> *@
                            <textarea id="" asp-for="Description" class="form-control" rows="8"></textarea> 
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label>Fecha límite para registro</label>
                            <input asp-for="FechaExpiracionRegistro" type="datetime-local" class="form-control" />
                            <span asp-validation-for="FechaExpiracionRegistro" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="col-3">
                        <div class="mb-2">

                            @{
                                if (Model.ThumbnailUrl == null)
                                {
                                    <img src="~/thumbnails/default_image.png" class="img-fluid" id="thumbnail" />
                                }
                                else
                                {
                                    <img src="~/thumbnails/@Model.ThumbnailUrl" class="img-fluid" id="thumbnail" />
                                }   
                            }
                            
                        </div>

                        <div class="mb-2">
                            <label>Miniatura</label>
                            <input type="file" asp-for="Thumbnail" class="custom-file" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>  
                </div>

                <div class="mb-2">
                    <button type="submit" class="btn btn-danger w-100">Guardar</button>
                </div>

            </form>

        </div>

    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        <script>
            $(".custom-file").on("change", function (){
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0])
            } );
        </script>
}

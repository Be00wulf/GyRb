@model GyRb.ViewModels.TicketCodeVM

@{
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Validación";
}

<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image">
                        <img src="~/blog/assets/img/lb.png" class="img-fluid" alt="Imagen decorativa" />
                    </div>

                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center mb-4">
                                <h1 class="h4 text-gray-900">@ViewData["Title"]</h1>
                                <p>Por favor ingresa el código de tu ticket para validar tu registro.</p>
                            </div>

                            <form asp-action="EnterCode" method="post" class="user needs-validation" novalidate>
                                <input type="hidden" asp-for="PostId" />

                                <div class="form-group">
                                    <label asp-for="Code" class="form-label"></label>
                                    <input asp-for="Code" class="form-control form-control-user" placeholder="Ejemplo: TICKET-001" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-dark btn-user btn-block">Validar Código</button>
                            </form>

                            <p class="mt-3 text-center text-muted">PostId recibido: @Model.PostId</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var notyf = new Notyf();

        @if (ViewBag.SuccessMessage != null)
        {
            <text>
                    notyf.success("@ViewBag.SuccessMessage");
            </text>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <text>
                    notyf.error("@ViewBag.ErrorMessage");
            </text>
        }
        });
    </script>
}

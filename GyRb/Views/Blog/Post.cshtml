@model GyRb.ViewModels.BlogPostVM

@{
    ViewData["Title"] = "Post";
    string thumbnailUrl = "";
    if(Model.ThumbnailUrl == null)
    {
        thumbnailUrl = "/blog/assets/img/ff.jpg";
    }
    else
    {
		thumbnailUrl = "/thumbnails/" + Model.ThumbnailUrl;
    }

    
}


<!-- Page Header-->
<header class="masthead" style="background-image: url('@thumbnailUrl')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="post-heading">
                    <h1>@Model.Title</h1>
                    <h2 class="subheading">@Model.ShortDescription</h2>
                    <span class="meta">
                        Publicado por
                        <a href="#!">@Model.AuthorName</a>
						el @Model.CreatedDate.ToShortDateString()
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content-->
<article class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7 mt-4">
                @Html.Raw(Model.Description)
            </div>

            <div class="col-md-10 col-lg-8 col-xl-7 mt-4">
                Fecha del evento:
                @Html.Raw(Model.FechaExpiracionRegistro)
            </div>

            <div class="col-md-10 col-lg-8 col-xl-7 mt-4">
                @if (DateTime.Now <= Model.FechaExpiracionRegistro)
                {
                    <a href="@Url.Action("EnterCode", "Attendance", new { id = Model.Id })" class="btn btn-primary">Registrarse</a>
                }
                else
                {
                    <button class="btn btn-secondary" disabled>Registro cerrado</button>
                }
            </div>
        </div>
    </div>
</article>